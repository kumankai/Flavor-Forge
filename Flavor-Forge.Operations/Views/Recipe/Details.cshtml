@model Flavor_Forge.Entities.Recipe

@{
    ViewData["Title"] = "Recipe Details";
}

<div class="container py-5">
    <!-- Recipe Header -->
    <div class="row justify-content-center mb-5">
        <div class="col-lg-8">
            <div class="text-center">
                <h1 class="display-4 mb-3">@Model.RecipeName</h1>
                <div class="recipe-meta">
                    <span class="badge bg-primary rounded-pill me-2">
                        <i class="fas fa-list-ul me-1"></i>
                        @(Model.Ingredients?.Count ?? 0) Ingredients
                    </span>
                    @if (!string.IsNullOrEmpty(Model.Author))
                    {
                        <span class="badge bg-secondary rounded-pill">
                            <i class="fas fa-user me-1"></i>
                            @Model.Author
                        </span>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Recipe Content -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body p-4 p-md-5">
                    <!-- Ingredients Section -->
                    <section class="recipe-section mb-5">
                        <h2 class="h4 mb-4">
                            <i class="fas fa-shopping-basket text-primary me-2"></i>
                            Ingredients
                        </h2>
                        <div class="ingredients-list">
                            <ul class="list-unstyled">
                                @if (Model.Ingredients != null)
                                {
                                    @foreach (var ingredient in Model.Ingredients)
                                    {
                                        <li class="mb-3 d-flex align-items-center">
                                            <i class="fas fa-check-circle text-success me-3"></i>
                                            <span>
                                                <span class="quantity">@ingredient.Quantity</span>
                                                <span class="unit">@ingredient.Unit</span>
                                                @ingredient.Name
                                            </span>
                                        </li>
                                    }
                                }
                            </ul>
                        </div>
                    </section>

                    <!-- Instructions Section -->
                    <section class="recipe-section">
                        <h2 class="h4 mb-4">
                            <i class="fas fa-utensils text-primary me-2"></i>
                            Instructions
                        </h2>
                        <div class="instructions-content">
                            <p class="recipe-instructions">@Model.Instructions</p>
                        </div>
                    </section>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="text-center mt-4">
                <a class="btn btn-primary btn-lg me-2" asp-action="ShowRecipes">
                    <i class="fas fa-arrow-left me-2"></i>
                    Back to Recipes
                </a>
                <a class="btn btn-outline-primary btn-lg" href="#" onclick="window.print()">
                    <i class="fas fa-print me-2"></i>
                    Print Recipe
                </a>
            </div>
        </div>
    </div>
</div>